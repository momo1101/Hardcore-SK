<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef Class="AIRobot.X2_ThingDef_AIRobot" Name="Base_X2_AIRobot" Abstract="True">
		<thingClass>AIRobot.X2_AIRobot</thingClass>
		<category>Pawn</category>
		<selectable>true</selectable>
		<tickerType>Normal</tickerType>
		<altitudeLayer>Pawn</altitudeLayer>
		<useHitPoints>false</useHitPoints>
		<hasTooltip>true</hasTooltip>
		<soundImpactDefault>BulletImpact_Metal</soundImpactDefault>
		<statBases>
			<Flammability>1.0</Flammability>
			<LeatherAmount>0</LeatherAmount>
			<MeatAmount>0</MeatAmount>
			<FilthRate>0</FilthRate>
			<PsychicSensitivity>0.5</PsychicSensitivity>
			<ToxicResistance>1</ToxicResistance>
			<ToxicEnvironmentResistance MayRequire="Ludeon.RimWorld.Biotech">0.95</ToxicEnvironmentResistance>
			<Mass>15</Mass>
			<MentalBreakThreshold>0</MentalBreakThreshold>
			<MeleeDodgeChance>0.25</MeleeDodgeChance>
			<MeleeCritChance>0.02</MeleeCritChance>
			<MeleeParryChance>0.01</MeleeParryChance>
			<Radiation>0</Radiation>
			<SmokeSensitivity>0</SmokeSensitivity>
			<ComfyTemperatureMin>-35</ComfyTemperatureMin>
			<ComfyTemperatureMax>55</ComfyTemperatureMax>
		</statBases>
		<receivesSignals>false</receivesSignals>
		<inspectorTabs>
			<li>ITab_Pawn_Health</li>
			<li>ITab_Pawn_Needs</li>
			<li>ITab_Pawn_Gear</li>
		</inspectorTabs>
		<comps>
			<li>
				<compClass>CompAttachBase</compClass>
			</li>
		</comps>
		<drawGUIOverlay>true</drawGUIOverlay>
		<race>
			<thinkTreeMain>X2_AIRobot</thinkTreeMain>
			<thinkTreeConstant>X2_AIRobotConstant</thinkTreeConstant>
			<fleshType>Mechanoid</fleshType>
			<foodType>None</foodType>
			<intelligence>ToolUser</intelligence>
			<makesFootprints>false</makesFootprints>
			<nameCategory>HumanStandard</nameCategory>
			<wildness>0.1</wildness>
			<mateMtbHours>0</mateMtbHours>
			<ageGenerationCurve>
				<points>
					<li>(0,0)</li>
					<li>(1,100)</li>
					<li>(5,50)</li>
					<li>(20,0)</li>
				</points>
			</ageGenerationCurve>
			<lifeExpectancy>5</lifeExpectancy>
			<lifeStageAges>
				<li>
					<def>MechanoidFullyFormed</def>
					<minAge>0</minAge>
				</li>
			</lifeStageAges>
			<soundMeleeHitPawn>Pawn_Melee_MechanoidBash_HitPawn</soundMeleeHitPawn>
			<soundMeleeHitBuilding>Pawn_Melee_MechanoidBash_HitBuilding</soundMeleeHitBuilding>
			<soundMeleeMiss>Pawn_Melee_MechanoidBash_Miss</soundMeleeMiss>
		</race>
		<tools>
			<li Class="CombatExtended.ToolCE">
				<label>left manipulator</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>2</power>
				<cooldownTime>1.5</cooldownTime>
				<linkedBodyPartsGroup>LeftHand</linkedBodyPartsGroup>
				<armorPenetrationBlunt>0.3</armorPenetrationBlunt>
			</li>
			<li Class="CombatExtended.ToolCE">
				<label>right manipulator</label>
				<capacities>
					<li>Cut</li>
				</capacities>
				<power>2</power>
				<cooldownTime>1.5</cooldownTime>
				<linkedBodyPartsGroup>RightHand</linkedBodyPartsGroup>
				<armorPenetrationBlunt>0.3</armorPenetrationBlunt>
			</li>
			<li Class="CombatExtended.ToolCE">
				<label>head</label>
				<capacities>
					<li>Blunt</li>
				</capacities>
				<power>1</power>
				<cooldownTime>2.2</cooldownTime>
				<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
				<ensureLinkedBodyPartsGroupAlwaysUsable>true</ensureLinkedBodyPartsGroupAlwaysUsable>
				<chanceFactor>0.2</chanceFactor>
				<armorPenetrationBlunt>0.35</armorPenetrationBlunt>
			</li>
		</tools>
		<butcherProducts>
			<RobotParts>8</RobotParts>
			<AdvMechanism>2</AdvMechanism>
			<Rubber>5</Rubber>
			<Plastic>3</Plastic>
			<Microchips>1</Microchips>
		</butcherProducts>
		<modExtensions>
			<li Class="CombatExtended.RacePropertiesExtensionCE">
				<bodyShape>QuadrupedLow</bodyShape>
			</li>
		</modExtensions>
	</ThingDef>


	<!-- ============================ Robots ========================== -->

	<ThingDef Class="AIRobot.X2_ThingDef_AIRobot" ParentName="Base_X2_AIRobot">
