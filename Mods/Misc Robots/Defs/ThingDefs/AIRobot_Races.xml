		<!-- <destroyedDef>AIRobot_Hauler_disabled</destroyedDef> -->
		<allowLearning>false</allowLearning>
	</ThingDef>

	<ThingDef Class="AIRobot.X2_ThingDef_AIRobot" ParentName="Base_X2_AIRobot">
