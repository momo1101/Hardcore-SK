<?xml version="1.0" encoding="UTF-8"?>
<Defs>
  <VSEWW.RewardDef>
    <defName>VSEWW_MercenaryJoins</defName>
    <texPath>UI/Rewards/RewardPawnJoins_Legendary</texPath>
    <label>Pawns join</label>
    <description>A group of 5 mercenary PawnKindDef pawns join</description>
    <category>Legendary</category>
    <pawns>
      <li>
        <pawnkind>Mercenary_Gunner</pawnkind>
        <count>5</count>
      </li>
    </pawns>
  </VSEWW.RewardDef>

  <VSEWW.RewardDef>
    <defName>VSEWW_LegendaryResourceDrop</defName>
    <texPath>UI/Rewards/RewardResourceDrop_Legendary</texPath>
    <label>Resource drop</label>
    <description>Cargo pods drop 3000 wood, 3000 steel, 100 components, 50 advanced components, 500 plasteel</description>
    <category>Legendary</category>
    <items>
      <li>
        <thing>WoodLog</thing>
        <count>3000</count>
      </li>
      <li>
        <thing>Steel</thing>
        <count>3000</count>
      </li>
      <li>
        <thing>Plasteel</thing>
        <count>500</count>
      </li>
      <li>
        <thing>ComponentIndustrial</thing>
        <count>100</count>
      </li>
      <li>
        <thing>ComponentSpacer</thing>
        <count>50</count>
      </li>
    </items>
  </VSEWW.RewardDef>

  <VSEWW.RewardDef>
    <defName>VSEWW_SurvivalMeansDrop</defName>
    <texPath>UI/Rewards/RewardSurvivalMeans_Legendary</texPath>
    <label>Survival means drop</label>
    <description>Cargo pods drop 250 survival meals, 50 glitterworld medicine, 5 Mechanite healer mech serums and 200 medicine</description>
    <category>Legendary</category>
    <items>
      <li>
        <thing>MealSurvivalPack</thing>
        <count>250</count>
      </li>
      <li>
        <thing>MedicineIndustrial</thing>
        <count>200</count>
      </li>
      <li>
        <thing>MedicineUltratech</thing>
        <count>50</count>
      </li>
      <li>
        <thing>MechSerumHealer</thing>
        <count>5</count>
      </li>
    </items>
  </VSEWW.RewardDef>

  <VSEWW.RewardDef>
    <defName>VSEWW_LegendaryFuelDrop</defName>
    <texPath>UI/Rewards/RewardFuelDrop_Legendary</texPath>
    <label>Fuel drop</label>
    <description>Cargo pods drop 2000 chemfuel, 2000 wood and 800 uranium</description>
    <category>Legendary</category>
    <items>
      <li>
        <thing>Chemfuel</thing>
        <count>2000</count>
      </li>
      <li>
        <thing>WoodLog</thing>
        <count>2000</count>
      </li>
      <li>
        <thing>Uranium</thing>
        <count>800</count>
      </li>
    </items>
  </VSEWW.RewardDef>

  <VSEWW.RewardDef>
    <defName>VSEWW_LegendaryGearDrop</defName>
    <texPath>UI/Rewards/RewardGear_Legendary</texPath>
    <label>Legendary gear drop</label>
    <description>Cargo pods 5 random weapons and 5 random armors drop, quality is Legendary</description>
    <category>Legendary</category>
    <randomItems>
      <li>
        <thingCategories>
          <li>Weapons</li>
        </thingCategories>
        <excludeThingCategories>
          <li MayRequire="CETeam.CombatExtended">Ammo</li>
        </excludeThingCategories>
        <quality>Legendary</quality>
        <count>5</count>
      </li>
      <li>
        <thingCategories>
          <li>ApparelArmor</li>
        </thingCategories>
        <quality>Legendary</quality>
        <count>5</count>
      </li>
    </randomItems>
  </VSEWW.RewardDef>

  <VSEWW.RewardDef>
    <defName>VSEWW_CashAndRiches</defName>
    <texPath>UI/Rewards/RewardCashAndRiches_Legendary</texPath>
    <label>Cash and Riches</label>
    <description>Cargo pods drop 25000 silver, 1000 gold, 1000 Jade</description>
    <category>Legendary</category>
    <items>
      <li>
        <thing>Silver</thing>
        <count>25000</count>
      </li>
      <li>
        <thing>Gold</thing>
        <count>1000</count>
      </li>
      <li>
        <thing>Jade</thing>
        <count>1000</count>
      </li>
    </items>
  </VSEWW.RewardDef>

  <VSEWW.RewardDef>
    <defName>VSEWW_ThrumboDrop</defName>
    <texPath>UI/Rewards/RewardThrumboDrop_Legendary</texPath>
    <label>Thrumbo drop</label>
    <description>Cargo pod drops 3 tamed thrumbos</description>
    <category>Legendary</category>
    <pawns>
      <li>
        <pawnkind>Thrumbo</pawnkind>
        <count>3</count>
      </li>
    </pawns>
  </VSEWW.RewardDef>

  <VSEWW.RewardDef>
    <defName>VSEWW_LegendarySkillBoost</defName>
    <texPath>UI/Rewards/RewardSkillBoost_Legendary</texPath>
    <label>Skill boost</label>
    <description>Improve every skill of every pawn under your control by 5</description>
    <category>Legendary</category>
    <boostSkillBy>5</boostSkillBy>
  </VSEWW.RewardDef>

  <VSEWW.RewardDef>
    <defName>VSEWW_ArchotechProstheticsDrop</defName>
    <texPath>UI/Rewards/RewardArchotechProsthethicsDrop_Legendary</texPath>
    <label>Archotech prosthetics drop</label>
    <description>Cargo pod drops random 10 archotech body parts</description>
    <category>Legendary</category>
    <randomItems>
      <li>
        <thingCategories>
          <li>BodyPartsArchotech</li>
        </thingCategories>
        <count>10</count>
        <quality MayRequire="rebelrabbit.qualitybionics">Legendary</quality>
      </li>
    </randomItems>
  </VSEWW.RewardDef>

  <VSEWW.RewardDef>
    <defName>VSEWW_MassHeal</defName>
    <texPath>UI/Rewards/RewardMassHeal_Legendary</texPath>
    <label>Mass Heal</label>
    <description>Instantly heals all the wounds on all pawns under player control</description>
    <category>Legendary</category>
    <massHeal>True</massHeal>
  </VSEWW.RewardDef>
</Defs>