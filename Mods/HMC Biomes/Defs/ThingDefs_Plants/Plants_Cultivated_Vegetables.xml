<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="SK_DeciduousPlantDef">
		<defName>Plant_Buckwheat</defName>
		<label>Buckwheat Plant</label>
		<description>Plants with relatively large and nutritious groats that grow in most of the planet. Can be ground into flour, cooked, or eaten raw.</description>
		<graphicData>
			<texPath>Things/reskinPlants/Plant/Buckwheat/Buckwheat</texPath>
			<graphicClass>Graphic_Random</graphicClass>
		</graphicData>
		<plant>
			<sowMinSkill>2</sowMinSkill>
			<wildClusterWeight>65</wildClusterWeight>
			<wildClusterRadius>5</wildClusterRadius>
			<!-- <maxMeshCount>4</maxMeshCount> -->
			<sowResearchPrerequisites>
				<li>Food_Plants_A1</li>
			</sowResearchPrerequisites>
			<sowTags>
				<li>Ground</li>
				<li>Hydroponic</li>
			</sowTags>
			<immatureGraphicPath>Things/reskinPlants/Plant/Buckwheat/Buckwheat_Immature</immatureGraphicPath>
			<harvestedThingDef>RawBuckwheat</harvestedThingDef>
			<harvestTag>Standard</harvestTag>
			<harvestYield>14</harvestYield>
			<topWindExposure>0.15</topWindExposure>
			<growDays>4.8</growDays>
			<fertilitySensitivity>0.6</fertilitySensitivity>
			<fertilityMin>0.45</fertilityMin>
			<visualSizeRange>
				<min>0.25</min>
				<max>1</max>
			</visualSizeRange>
			<wildOrder>2</wildOrder>
			<purpose>Food</purpose>
		</plant>
	</ThingDef>

</Defs>