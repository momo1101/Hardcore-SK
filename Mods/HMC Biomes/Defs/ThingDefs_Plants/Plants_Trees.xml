<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!--============================ Trees  ============================-->

	<ThingDef ParentName="TreewoodBase">
		<defName>Plant_TreeIronPineHMC</defName>
		<label>iron pine tree</label>
		<description>Genetically modified pine trees are large conifer, very hardwood trees.</description>
		<graphicData>
			<texPath>Things/reskinPlants/Plant/TreePineIronWood/TreePine</texPath>
			<graphicClass>Graphic_Random</graphicClass>
			<shadowData>
				<volume>(0.15, 0.3, 0.15)</volume>
				<offset>(0,0,-0.38)</offset>
			</shadowData>
		</graphicData>
		<statBases>
			<Beauty>4</Beauty>
			<Nutrition>1</Nutrition>
			<Flammability>0.7</Flammability>
		</statBases>
		<plant>
			<wildClusterRadius>15</wildClusterRadius>
			<wildClusterWeight>50</wildClusterWeight>
			<immatureGraphicPath>Things/reskinPlants/Plant/TreePineIronWood/TreePine_Immature</immatureGraphicPath>
			<visualSizeRange>
				<min>1.4</min>
				<max>2.8</max>
			</visualSizeRange>
			<growDays>43</growDays>
			<harvestWork>2000</harvestWork>
			<harvestYield>30</harvestYield>
			<harvestedThingDef>IronWoodLogHMC</harvestedThingDef>
			<sowMinSkill>11</sowMinSkill>
			<sowResearchPrerequisites>
				<li>Trees_B3</li>
			</sowResearchPrerequisites>
		</plant>
		<modExtensions>
			<li Class="SK.ExtendedPlantGraphic">
				<hasSnowyGraphic>true</hasSnowyGraphic>
			</li>
		</modExtensions>
	</ThingDef>

</Defs>