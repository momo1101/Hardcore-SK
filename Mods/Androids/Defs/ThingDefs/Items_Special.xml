<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<ThingDef ParentName="ResourceBase">
		<defName>ChjAndroidDroidAssemblyKit</defName>
		<label>droid assembly kit</label>
		<thingClass>ThingWithComps</thingClass>
		<description>A kit containing a disassembled Droid with all the tools required to assemble it.</description>
		<graphicData>
			<texPath>Things/Item/DroidAssemblyKit</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<resourceReadoutPriority>Middle</resourceReadoutPriority>
		<stackLimit>1</stackLimit>
		<useHitPoints>true</useHitPoints>
		<statBases>
			<MarketValue>1065</MarketValue>
			<MaxHitPoints>100</MaxHitPoints>
			<Mass>60.0</Mass>
		</statBases>
		<thingCategories>
			<li>Items</li>
		</thingCategories>
		<tradeability>All</tradeability>
		<techLevel>Spacer</techLevel>
		<tradeTags>
			<li>ExoticMisc</li>
		</tradeTags>
		<comps>
			<li Class="CompProperties_Usable">
				<useJob>UseItem</useJob>
				<useLabel>Assemble Droid</useLabel>
				<useDuration>600</useDuration>
			</li>
			<li Class="Androids.CompProperties_SpawnPawn">
				<compClass>Androids.CompUseEffect_SpawnDroid</compClass>
				<pawnKind>ChjDroidColonist</pawnKind>
			</li>
			<li Class="CompProperties_UseEffectDestroySelf" />
		</comps>
	</ThingDef>

