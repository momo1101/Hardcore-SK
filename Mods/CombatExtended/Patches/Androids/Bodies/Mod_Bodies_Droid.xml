						</value>
					</li>
					
					<li Class="PatchOperationAdd">
						<xpath>Defs/BodyDef[defName="ChJDroid"]/corePart/parts/li[customLabel="right shoulder"]/groups</xpath>
						<value>
						  <li>RightShoulder</li>
						</value>
					</li>
				
					<!--Natural Armor-->
					<li Class="PatchOperationAdd">
						<xpath>Defs/BodyDef[defName="ChJDroid"]/corePart/groups</xpath>
						<value>
								<li>CoveredByNaturalArmor</li>
						</value>
					</li>
					
					<li Class="PatchOperationAdd">
						<xpath>Defs/BodyDef[defName="ChJDroid"]/corePart/parts/li[def="MechanicalNeck"]/groups</xpath>
