<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationSequence">
		<operations>
				
			<!--Patch ChJDroid Bodytype-->
			
			<li Class="PatchOperationFindMod">
				<mods>
					<li>Androids</li>
				</mods>
				<match Class="PatchOperationSequence">
					<operations>
					<!--Arm Groups-->
				
					<li Class="PatchOperationAdd">
						<xpath>Defs/BodyDef[defName="ChJDroid"]/corePart/parts/li[def="MechanicalShoulder"]/parts/li[customLabel="left arm"]/groups</xpath>
						<value>
						  <li>LeftArm</li>
						</value>
					</li>
					
					<li Class="PatchOperationAdd">
						<xpath>Defs/BodyDef[defName="ChJDroid"]/corePart/parts/li[def="MechanicalShoulder"]/parts/li[customLabel="right arm"]/groups</xpath>
