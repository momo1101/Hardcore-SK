<?xml version="1.0" encoding="utf-8"?>
<Patch>

  <Operation Class="PatchOperationReplace">
    <xpath>Defs/BodyPartDef[defName="Torso"]/hitPoints</xpath>
    <value>
      <hitPoints>50</hitPoints>
    </value>
  </Operation>

  <Operation Class="PatchOperationReplace">
    <xpath>Defs/BodyPartGroupDef[defName="Teeth"]/listOrder</xpath>
    <value>
      <listOrder>196</listOrder>
    </value>
  </Operation>

  <Operation Class="PatchOperationReplace">
    <xpath>Defs/BodyPartGroupDef[defName="Mouth"]/listOrder</xpath>
    <value>
      <listOrder>195</listOrder>
    </value>
  </Operation>

  <!-- ========== Modify bleed rates ========== -->

  <Operation Class="PatchOperationAdd">
    <xpath>Defs/BodyPartDef[defName="Torso" or defName="Shoulder" or defName="Arm" or defName="Hand" or defName="Waist"]</xpath>
    <value>
      <bleedRate>1.5</bleedRate>
    </value>
  </Operation>

</Patch>