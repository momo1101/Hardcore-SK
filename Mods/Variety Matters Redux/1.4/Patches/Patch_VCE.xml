<?xml version="1.0" encoding="utf-8"?>
<Patch>
    <Operation Class="PatchOperationFindMod">
        <mods>
            <li>Vanilla Cooking Expanded</li>
        </mods>
        <match Class="PatchOperationSequence">
            <operations>
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VCE_SimpleDessert"]/ingestible/preferability</xpath>
                    <value>
                        <preferability>MealSimple</preferability>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VCE_FineDessert"]/ingestible/preferability</xpath>
                    <value>
                        <preferability>MealFine</preferability>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VCE_LavishDessert"]/ingestible/preferability</xpath>
                    <value>
                        <preferability>MealLavish</preferability>
                    </value>
                </li>

                <!-- Assuming Gourmet Dessert is equivalent to Lavish -->
                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VCE_GourmetDessert"]/ingestible/preferability</xpath>
                    <value>
                        <preferability>MealLavish</preferability>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VCE_CannedMeat"]/ingestible/preferability</xpath>
                    <value>
                        <preferability>MealSimple</preferability>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VCE_CannedProduce"]/ingestible/preferability</xpath>
                    <value>
                        <preferability>MealSimple</preferability>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VCE_CannedFruit"]/ingestible/preferability</xpath>
                    <value>
                        <preferability>MealFine</preferability>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VCE_CannedAP"]/ingestible/preferability</xpath>
                    <value>
                        <preferability>MealAwful</preferability>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VCE_CannedFish"]/ingestible/preferability</xpath>
                    <value>
                        <preferability>MealSimple</preferability>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VCE_DeepFriedBigMeat"]/ingestible/preferability</xpath>
                    <value>
                        <preferability>MealFine</preferability>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>
                        /Defs/ThingDef[defName="VCE_DeepFriedVegetables"]/ingestible/preferability</xpath>
                    <value>
                        <preferability>MealFine</preferability>
                    </value>
                </li>

                <li Class="PatchOperationReplace">
                    <xpath>/Defs/ThingDef[defName="VCE_DeepFriedFish"]/ingestible/preferability</xpath>
                    <value>
                        <preferability>MealFine</preferability>
                    </value>
                </li>
            </operations>
        </match>
    </Operation>
</Patch>