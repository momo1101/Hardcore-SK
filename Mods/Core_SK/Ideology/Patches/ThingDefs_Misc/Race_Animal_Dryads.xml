	<!-- ========== Barkskin ========== -->

	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="Dryad_Barkskin"]/statBases/ArmorRating_Sharp</xpath>
		<value>
			<ArmorRating_Sharp>10</ArmorRating_Sharp>
