<Patch>

    <!-- Mine -->
    <Operation Class="PatchOperationAddModExtension">
        <xpath>Defs/WorkGiverDef[defName="Mine"]</xpath>
        <value>
            <li Class="SurvivalToolsLite.WorkGiverExtension">
                <requiredStats>
                    <li>MiningSpeed</li>
